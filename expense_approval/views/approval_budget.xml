<odoo>
    <record id="view_expense_approval_budget_tree" model="ir.ui.view">
        <field name="name">expense.approval.budget.tree</field>
        <field name="model">expense.approval.budget</field>
        <field name="arch" type="xml">
            <tree string="Budget Lines">
                <field name="department_id"/>
                <field name="main_item_id"/>
                <field name="sub_item_id"/>
                <field name="year"/>
                <field name="month"/>
                <field name="planned_amount"/>
                <field name="used_amount"/>
                <field name="remaining_amount"/>
            </tree>
        </field>
    </record>
    <record id="view_cash_flow_tree" model="ir.ui.view">
        <field name="name">cash_flow.tree</field>
        <field name="model">expense.approval.budget</field>
        <field name="arch" type="xml">
            <tree string="Cash Flow">
                <field name="department_id"/>
                <field name="main_item_id"/>
                <field name="sub_item_id"/>
                <field name="year"/>
                <field name="month"/>
                <field name="planned_amount"/>
                <field name="used_amount_cash_flow"/>
                <field name="various_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_expense_approval_budget_form" model="ir.ui.view">
        <field name="name">expense.approval.budget.form</field>
        <field name="model">expense.approval.budget</field>
        <field name="arch" type="xml">
            <form string="Budget Line">
                <sheet>
                    <group>
                        <field name="department_id"/>
                        <field name="main_item_id" force_save="1"/>
                        <field name="sub_item_id" force_save="1"/>
                    </group>
                    <group>
                        <field name="year"/>
                        <field name="month"/>
                    </group>
                    <group>
                        <field name="planned_amount"/>
                        <field name="used_amount"/>
                        <field name="remaining_amount"/>
                        <field name="used_amount_store" invisible="1"/>
                        <field name="remaining_amount_store" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_cash_flow_form" model="ir.ui.view">
        <field name="name">expense.cash.flow.form</field>
        <field name="model">expense.approval.budget</field>
        <field name="arch" type="xml">
            <form string="Budget Line">
                <sheet>
                    <group>
                        <field name="department_id"/>
                        <field name="main_item_id" force_save="1"/>
                        <field name="sub_item_id" force_save="1"/>
                    </group>
                    <group>
                        <field name="year"/>
                        <field name="month"/>
                    </group>
                    <group>
                        <field name="planned_amount"/>
                        <field name="used_amount_cash_flow"/>
                        <field name="various_amount"/>
                        <field name="used_amount_cash_flow_store" invisible="1"/>
                        <field name="various_amount_store" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_expense_approval_budget_pivot" model="ir.ui.view">
        <field name="name">expense.approval.budget.pivot</field>
        <field name="model">expense.approval.budget</field>
        <field name="arch" type="xml">
            <pivot string="Expense Budget Analysis">
                <!-- Group by -->
                <field name="department_id" type="row"/>
                <field name="main_item_id" type="row"/>
                <field name="sub_item_id" type="row"/>
                <field name="year" type="col"/>
                <field name="month" type="col"/>

                <!-- Measures -->
                <field name="planned_amount" type="measure"/>
                <field name="used_amount_store" string="Used Amount" type="measure"/>
                <field name="remaining_amount_store" string="Remaining Amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_cash_flow_pivot" model="ir.ui.view">
        <field name="name">expense.approval.budget.pivot</field>
        <field name="model">expense.approval.budget</field>
        <field name="arch" type="xml">
            <pivot string="Cash Flow Analysis">
                <!-- Group by -->
                <field name="department_id" type="row"/>
                <field name="main_item_id" type="row"/>
                <field name="sub_item_id" type="row"/>
                <field name="year" type="col"/>
                <field name="month" type="col"/>

                <!-- Measures -->
                <field name="planned_amount" type="measure"/>
                <field name="used_amount_cash_flow_store" string="Used Amount" type="measure"/>
                <field name="various_amount_store" string="Various Amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_expense_approval_budget" model="ir.actions.act_window">
        <field name="name">Budget Lines</field>
        <field name="res_model">expense.approval.budget</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="context">{'default_type': 'budget'
            }
        </field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_expense_approval_budget_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_expense_approval_budget_form')}),
        (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_expense_approval_budget_pivot')})
        ]"/>
    </record>

    <record id="action_cash_flow" model="ir.actions.act_window">
        <field name="name">التدفقات النقدية</field>
        <field name="res_model">expense.approval.budget</field>
        <field name="view_mode">tree,form,pivot</field>

        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 'view_id': ref('view_cash_flow_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_cash_flow_form')}),
        (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_cash_flow_pivot')})
        ]"/>
    </record>

    <menuitem id="menu_cash_flow"
              name="التدفقات النقدية"
              parent="expense_approval.menu_expense_approval"
              action="action_cash_flow"
              sequence="9"/>

    <menuitem id="menu_expense_approval_budget"
              name="Budget Lines"
              parent="expense_approval.menu_expense_approval_settings"
              action="action_expense_approval_budget"
              sequence="40"/>


</odoo>
