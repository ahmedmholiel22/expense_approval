<odoo>
    <record id="view_move_form_inherit_expense" model="ir.ui.view">
        <field name="name">account.move.form.inherit.expense</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="expense_request_id" invisible="1"/>
                <field name="expense_request_ref" attrs="{'invisible': [('expense_request_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>