<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_form_main_item" model="ir.ui.view">
        <field name="name">expense.approval.main.item.form</field>
        <field name="model">expense.approval.main.item</field>
        <field name="arch" type="xml">
            <form string="Main Expense Item">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="acc_number"/>
                        <field name="has_product"/>
                    </group>

                    <notebook>
                        <page string="Sub Items">
                            <field name="sub_item_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="has_product"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Approval Level">
                            <field name="approval_level_ids" force_save="1">
                                <tree editable="bottom">
                                    <field name="sequence" force_save="1"/>
                                    <field name="level_name" attrs="{'required': [('is_approved', '=', True)]}" force_save="1"/>
                                    <field name="user_id" attrs="{'required': [('is_approved', '=', True)]}" force_save="1"/>
                                    <field name="is_approved" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="expense_approval_main_item_action" model="ir.actions.act_window">
        <field name="name">Expense Approval Main Item</field>
        <field name="res_model">expense.approval.main.item</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>
    <menuitem id="menu_expense_approval_main_item"
              name="Main Expense Items"
              parent="expense_approval.menu_expense_approval_settings"
              action="expense_approval_main_item_action"
    />
</odoo>