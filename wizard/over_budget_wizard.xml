<odoo>
    <record id="over_budget_wizard_form" model="ir.ui.view">
        <field name="name">over.budget.wizard.form</field>
        <field name="model">over.budget.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="request_id" invisible="1"/>
                        <field name="comment" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send" type="object" class="btn-primary" string="Send"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="over_budget_wizard_action" model="ir.actions.act_window">
        <field name="name">Over Budget Wizard</field>
        <field name="res_model">over.budget.wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>
</odoo>